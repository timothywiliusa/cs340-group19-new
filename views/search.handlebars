<h1>Browse by Merchandise Type</h1>

<form id="typepicker" action="/search/:" method="get">
Select: <select name="type">
  <option value="None">None</option>
  <option value="Weapon">Weapon</option>
  <option value="Blueprint">Blueprint</option>
  <option value="Program">Program</option>
  <option value="Material">Raw Material</option>
  <option value="Music">Music</option>
  <option value="Toy">Toy</option>
  <option value="Nutrition">Nutrition/Substance</option>
  <option value="Armor">Armor/Apparel</option>
  <input type="submit" value="Submit">
</form>
</select>
  <TABLE BORDER="5"    WIDTH="90%"   CELLPADDING="4" CELLSPACING="3">
   <TR>
      <TH>Type</TH>
      <TH>Title</TH>
      <TH>Price</TH>
      <TH>Purchase</TH>
   </TR>
  {{#each search}}
   <TR ALIGN="CENTER">
    <form action='/search/add/id'>
      <td>{{merchType}}</td>
      <td><input type = 'hidden' name='id' value="{{id}}">{{title}}</td>
      <td>{{price}}</td>
      <td><input type='submit' value='add to cart'></td>
   </form>
   </TR>
  {{/each}}
</TABLE>